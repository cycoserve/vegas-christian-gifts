{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"],
      "@/styles/*": ["styles/*"],
      "@/public/*": ["public/*"],
      "@/types/*": ["types/*"]
    },
    "types": ["react", "node"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "db.js", "types/editorjs.d.ts", "pages/api/contact.js", "types/paypal.d.ts"],
  "exclude": ["node_modules"]
}
